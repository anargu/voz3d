
#canvas-el
    width: 100%
    position: absolute
    top: 0
    left 0
    height 100%
    z-index: 1

.loading-card
    position absolute
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%)
    width 200px
    height 160px
    line-height 160px
    background #fff
    font-size 24px
    text-align center
    z-index: 10

    -webkit-box-shadow: 2px 2px 22px -2px rgba(227,227,227,0.77)
    -moz-box-shadow: 2px 2px 22px -2px rgba(227,227,227,0.77)
    box-shadow: 2px 2px 22px -2px rgba(227,227,227,0.77)
