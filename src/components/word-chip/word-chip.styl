:host
    display: inline-block
    background: #EBEBEB
    border-radius: 50px
    padding: 2px 36px 2px 12px
    position relative
    margin 0px 4px
.label
    font-size 20px
    white-space: nowrap
    cursor pointer
    user-select none

.delete-icon
    font-size 20px
    background: #E37979
    color: #fff
    border-radius: 99px
    padding: 0px 9px
    position: absolute
    top: 0
    right: 0
    display: inline-block
    height: 100%
    cursor pointer
    user-select none