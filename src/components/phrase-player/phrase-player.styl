:host
    // display: block
    width 100%
    margin-top 76px


    display: flex
    flex-wrap: nowrap
    align-items: center
    position relative
    z-index: 2

@media screen and (min-width: 1023px)
    :host
        max-width: 800px
        margin-left: auto
        margin-right: auto

.words-container
.actions-container
    display inline-block


.words-container
    width: calc(100% - 50px)
.words-inner-container
    display flex
    flex-wrap nowrap
    overflow-x auto
    padding-left: 10px
    position: relative

.actions-container
    width: 50px
.actions-container img 
    cursor pointer
    user-select none
    height: 50px
